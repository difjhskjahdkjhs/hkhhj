<!DOCTYPE html>
<html lang="en" class="uk-height-1-1">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Preeze - Login</title>
    <link rel="icon" href="img/favicon.ico">
    <!-- CSS FILES -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.2/css/uikit.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css" />

</head>
<body class="uk-height-1-1">
<div class="uk-flex uk-flex-center uk-flex-middle uk-background-muted uk-height-viewport uk-flex-1">
    <div class="uk-position-top-center ">
        <a href="/"><div class="uk-logo" style="padding: 10px 20px;margin: 5px;border-radius: 10px;">Preeze</div></a>
    </div>
    <div class="uk-position-bottom-center uk-position-small ">
        <span class="uk-text-small uk-text-muted">Â© 2018 Preeze</span>
    </div>
    <div class="uk-width-medium uk-padding-small">
        <form action='/login' method='POST' class="form-login">
            <fieldset class="uk-fieldset">
                <legend class="uk-legend">Login</legend>
                <div class="uk-margin">
                    <!--<label><input class="uk-checkbox" type="checkbox"> Keep me logged in</label>-->
                    <%- messages('partials/message_template', locals) %>
                </div>
                <div class="uk-margin">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: user"></span>
                        <input class="uk-input uk-form-large" required placeholder="email" type="text" name="username">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: lock"></span>
                        <input class="uk-input uk-form-large" required placeholder="Password" type="password" name="password">
                    </div>
                </div>

                <!--<div class="uk-margin">-->
                    <!--&lt;!&ndash;<label><input class="uk-checkbox" type="checkbox"> Keep me logged in</label>&ndash;&gt;-->
                <!--</div>-->

                <div class="uk-margin">
                    <button type="submit" class="uk-button uk-button-primary uk-button-primary uk-button-large uk-width-1-1">LOG IN</button>
                </div>
            </fieldset>
        </form>
        <div>
            <div class="uk-text-center">
                <a class="uk-link-reset uk-text-small" data-uk-toggle="target: #recover;animation: uk-animation-slide-top-small">Forgot your password?</a>
            </div>
            <div class="uk-margin-small-top" id="recover" hidden>
                <form action="/forgot" method="POST">

                    <div class="uk-margin-small">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: mail"></span>
                            <input class="uk-input" placeholder="E-mail" required type="email" name="forgotEmail">
                        </div>
                    </div>
                    <div class="uk-margin-small">
                        <button type="submit" class="uk-button uk-button-primary uk-button-primary uk-width-1-1">SEND PASSWORD</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<!-- JS FILES -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.2/js/uikit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.2/js/uikit-icons.min.js"></script>
</body>
</html>

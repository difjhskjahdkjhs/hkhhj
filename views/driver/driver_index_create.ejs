                                <!--<option>Option 01</option>-->
                                <!--<option>Option 02</option>-->
                            <!--</select>-->
                        <!--</div>-->
                    <!--</div>-->



                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-s-file">Drivers License</label>
                        <input class="uk-width-1-1" id="form-s-file" type="file" name="fileToUpload" multiple>
                        <p>
                            <span class="uk-label">Info</span> The max file size is []mb. We need a picture of your drivers license to verify your ability to drive in the UK.
                        </p>
                    </div>

                    <div class="uk-margin">
                        <button class="uk-button uk-button-default">Register Driver</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
    </div>
</div>


</body>
</html>

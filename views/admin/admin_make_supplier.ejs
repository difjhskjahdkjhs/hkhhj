<!DOCTYPE html>
<html lang="en" class="uk-height-1-1">
<head>
    <% include ../partials/head_content %>

    <style type="text/css">
        nav {
            background: #000 !important;
        }
    </style>
</head>
<body>
<div class="uk-offcanvas-content">
    <% include ../partials/navbar %>
    <% include ../partials/admin_navbar.ejs %>

    <div class="uk-section uk-section-xsmall ">
        <button class="uk-button uk-button-default uk-button-small" type="button" uk-toggle="target: #offcanvas-nav-primary"><span class="uk-margin-small-right" uk-icon="menu"></span>Navigation</button>

        <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">

        <% if (message) { %>
        <div class="uk-alert-success" uk-alert>
            <a class="uk-alert-close" uk-close></a>
            <p><%= message %></p>
        </div>
        <%}%>
        <form action='/admin/makeSupplier' method='post'>
            <fieldset class="uk-fieldset">

                <legend class="uk-legend">Find a User</legend>

                <div class="uk-margin">
                    <label class="uk-form-label" for="title">Email</label>
                    <input class="uk-input" type="text" placeholder="user@domain.com" name="email">

                </div>

                <div class="uk-margin">
                    <input class="uk-button uk-button-primary" type="submit" name="g" value="Find" id="g">
                </div>
            </fieldset>
        </form>

    </div>

    <div class="uk-container uk-container-center">
        <% if (foundUser) { %>
        <form class="uk-form-horizontal" action='/admin/makeSupplier/<%= foundUser._id %>' method='post'>
            <div class="uk-margin">
                <label class="uk-form-label" for="form-horizontal-text">Email</label>
                <div class="uk-form-controls">
                    <input class="uk-input" type="text" value="<%= foundUser.username%>" disabled>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="form-horizontal-text">Name</label>
                <div class="uk-form-controls">
                    <input class="uk-input" type="text" value="<%= foundUser.name %>" disabled>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="form-horizontal-select">Select Role</label>
                <div class="uk-form-controls">
                    <select class="uk-select" id="form-horizontal-select" name="role" required="required">
                        <option value="<%= foundUser.role %>" selected="selected">Current: <%= foundUser.role %></option>
                        <option value="user">user</option>
                        <option value="driver">driver</option>
                        <option value="supplier">supplier</option>
                        <option value="admin">admin</option>
                    </select>
                </div>
            </div>

            <div class="uk-margin">
                <input class="uk-button uk-button-primary" type="submit" value="Change Role">
            </div>
        </form>
        <% } %>
    </div>
    </div>
</div>


</body>
</html>
